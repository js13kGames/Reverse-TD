$gridSize = 40;

body {
  font-family: Arial;
  background-color: #222221;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  cursor: default;
}

#container {
  position: absolute;
  width: 640px;
  height: 480px;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: white;

  > * {
    position: absolute;
  }
}

canvas {
  left: 0;
  top: 0;
  background: transparent;
}

#staticCanvas {
  background-color: rgb(8,181,4);
  z-index: -1;
}

button {
  cursor: pointer;

  &:disabled {
    cursor: auto;
  }
}

.hide {
  display: none !important;
}

.top-bar {
  font-size: 14px;
  background: #333331;
  color: gold;
  left: 0px;
  top: -28px;
  padding: 5px;
  width: 100%;
  box-sizing: border-box;
  height: 30px;

  div {
    display: inline-block;
    line-height: 20px;
    border-right: 1px solid gold;
  }

  span {
    color: white;
  }
}

.money {
  width: 71px;
  padding-right: 28px
}

.income {
  padding: 0 28px 0 25px;
  width: 92px;
}

.lives {
  padding: 0 28px 0 25px;
}

.waves {
  padding: 0 28px 0 25px;
}

#gSpeed {
  position: absolute;
  right: 14px;
  top: -26px;
}

#gSpeed button {
  width: 0;
  height: 0;
  border: 10px solid transparent;
  border-right-width: 0;
  border-left-color: white;
  background: transparent;
  padding: 0;
  margin: 0;

 &.current {
    border-left-color: gold;
  }
}

.spawner-container {
  position: absolute;

  &.selected {
    .spawner-upgrade {
      visibility: visible;
      opacity: 1;
      -webkit-transform: scale(1);
      transform: scale(1);

      &.footman {
        left: unit(-0.5 * $gridSize, 'px');
        top: unit(-0.5 * $gridSize, 'px');
      }

      &.paladin {
        left: unit($gridSize, 'px');
        top: unit(-0.5 * $gridSize, 'px');
      }

      // &.speedster {
      //   left: unit(-0.75 * $gridSize, 'px');
      //   top: unit(0.25 * $gridSize, 'px');
      // }

      &.wizard {
        left: unit(1.25 * $gridSize, 'px');
        top: unit(0.25 * $gridSize, 'px');
      }
    }
  }
}

.spawner {
  position: absolute;
  border-radius: 50%;
  background: #fdfdfd;
  border: 1px solid black;
  width: unit($gridSize, 'px');
  height: unit($gridSize, 'px');
  z-index: 2;

  &:before {
    content: '∏';
    font-size: 20px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  &:hover,
  &:focus,
  .selected {
    background: #eaeaea;
  }
}

.footman:before,
.paladin:before,
.wizard:before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  transform: inherit;
  background-size: 50%;
}

.footman {
  background: lighten(blue, 30%);

  &:hover,
  &:focus {
    background: lighten(blue, 60%);
  }

  &:before {
    background: url("imgs/footman.png") no-repeat center;
  }
}

.paladin {
  background: grey;

  &:hover,
  &:focus {
    background: lighten(grey, 30%);
  }

  &:before {
    background: url("imgs/paladin.png") no-repeat center;
  }
}

