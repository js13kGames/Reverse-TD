.spawner-upgrade {
  position: absolute;
  border-radius: 50%;
  border: 1px solid transparent;
  visibility: hidden;
  opacity: 0;
  -webkit-transform: scale(.7);
  transform: scale(.7);
  transition: all .2s;
  width: unit($gridSize/2, 'px');
  height: unit($gridSize/2, 'px');
  left: 25%;
  top: 25%;
}

#card {
  width: 150px;
  background: rgba(51,51,49,.9);
  color: gold;
  font-size: 12px;
  padding: 10px;
  display: none;
  z-index: 100;

  &.show {
    display: block;
  }

  span {
    color: white;
  }

  &:before {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 3px;
    background: rgba(51,51,51,0.9);
    width: 15px;
    height: 15px;
    -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
    -webkit-clip-path: polygon(100% 100%, -5% 100%, 100% -5%);
            clip-path: polygon(100% 100%, -5% 100%, 100% -5%);
  }

  &.top:before {
    top: -7px;
    bottom: auto;
    -webkit-clip-path: polygon(0 0, -5% 100%, 100% -5%);
            clip-path: polygon(0 0, -5% 100%, 100% -5%);
  }

  &.right:before {
    right: 3px;
    left:auto;
  }

  .g {
    color: gold;
  }

  .w {
    color: white;
  }
}

#title {
  color: white;
  display: inline-block;
}

#desc {
  padding-bottom: 10px;
}

#gKey, #gLevels {
  color: gold;
  display: inline;
}

#isBuilding {
  color: gold;
  padding-bottom: 10px;
}

.upgrades {
  padding-top: 10px;
  margin-top: 10px;
  border-top: 1px solid;
}

#sendWave {
  font-size: 16px;
  font-weight: bold;
  height: 40px;
  background: gold;
  color: #333331;
  border: 1px solid #666662;
  bottom: 0;
  right: 0;
  width: 75px;

  &:disabled {
    background: lighten(#333331, 50%);
    color: grey;
  }

  &:active {
    background: black;
    color: gold;
  }
}

.tower {
  position: absolute;
  width: unit($gridSize, 'px');
  height: unit($gridSize, 'px');
  cursor: pointer;
  border-radius: 25%;
  border: none;
  margin: 0;
  padding: 0;

  &:before,
  &:after {
    display: block;
    content: '';
    position: absolute;

    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  &.selected + .tower-range {
    visibility: visible;
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  &.is-building {
    opacity: 0.5;
  }
}

.tower-range {
  position: absolute;
  visibility: hidden;
  border-radius: 100%;
  opacity: 0;
  -webkit-transform: scale(.7);
  transform: scale(.7);
  transition: all .2s;
  border: 1px solid transparent;
}

.arrow {
  background-color: lightgrey;
  box-shadow: 0 0 0 4px grey;
  width: 32px;
  height: 32px;
  border-radius: 50%;

  &:before {
    width: 5px;
    height: 5px;
    box-shadow: 0px -18px 0 0px #dadada, 0px 18px 0 0px #dadada, 18px 0px 0 0px #dadada, -18px 0px 0 0px #dadada;
    transform: translate(-50%, -50%) rotate(45deg);
  }

  &:after {
    width: 5px;
    height: 5px;
    box-shadow: 0px -18px 0 0px #dadada, 0px 18px 0 0px #dadada, 18px 0px 0 0px #dadada, -18px 0px 0 0px #dadada;
  }

  & + .tower-range {
    background: rgba(#d3d3d3, 0.5);
    border-color: #808080;
  }
}

.magic {
  background-color: lightgrey;
  box-shadow: 0 0 0 4px grey;
  width: 32px;
  height: 32px;
  border-radius: 50%;

  &:before {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 1px solid purple;
    background-image: radial-gradient(circle, purple, #7318f3)
  }

  &:after {
    width: 5px;
    height: 5px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 0px -18px 0 0px #dadada, 0px 18px 0 0px #dadada, 18px 0px 0 0px #dadada, -18px 0px 0 0px #dadada;
  }

  & + .tower-range {
    background: rgba(purple, 0.5);
    border-color: purple;
  }
}

.cannon {
  background-color: lightgrey;
  box-shadow: 0 0 0 4px grey;
  width: 32px;
  height: 32px;

  &:before {
    width: 1px;
    height: 5px;
    box-shadow: 0px -18px 0 0px #dadada, 0px 18px 0 0px #dadada, 18px 0px 0 0px #dadada, -18px 0px 0 0px #dadada;
    transform: translate(-50%, -50%) rotate(45deg);
  }

  &:after {
    width: 5px;
    height: 5px;
    box-shadow: 0px -18px 0 0px #dadada, 0px 18px 0 0px #dadada, 18px 0px 0 0px #dadada, -18px 0px 0 0px #dadada;
  }

  & + .tower-range {
    background: rgba(#333331, 0.5);
    border-color: #333331;
  }
}

.cant-afford {
  background: black;
  cursor: auto;

  &:before {
    content: 'X';
    position: absolute;
    left: 0
    right: 0;
    top: 0;
    bottom: 0;
    color: white;
    font-size: 16px;
  }

  &:hover,
  &:focus {
    background: black;
  }
}

.completed {
  cursor: auto;
}

.sell {
  color: gold;
  background: green;

  &:before {
    content: '$';
    background: none;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    font-size: 16px;
  }

  &:hover,
  &:focus {
    background: lighten(green, 10);
  }
}